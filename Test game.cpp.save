struct Answer
{
    const char* text;
    int score;
    int x1;
    int y1;
    int x2;
    int y2;


};

bool In(POINT pos, Answer ans);
bool In(POINT pos, Answer ans)
{
    if (
        pos.x > ans.x1 &&
        pos.x < ans.x2 &&
        pos.y > ans.y1 &&
        pos.y < ans.y2
    )
    {
        return true;
    }

    else
    {
        return false;
    }
}


